<h1>Articles listing page</h1>

<table>
    <thead>
        <th>Id</th>
        <th>Title</th>
        <th>Description</th>
        <th>Created At</th>
        <th colspan="3">Actions</th>
    </thead>
    <tbody>
        <% @articles.each do |article| %>
            <tr>
                <td> <%= article.id %> </td>
                <td> <%= article.title %> </td>
                <td> <%= article.description %> </td>
                <td> <%= show_article_created_at(article) %> </td>
                <td>
                    <%= link_to "Show", article_path(article), method: :get %>
                </td>
                <td>
                    <%= link_to "Edit", edit_article_path(article), method: :get %>
                </td>
                <td>
                    <%= button_to "Delete", article_path(article), method: :delete, form: { data: { turbo_confirm: "Are you sure?" } } %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>
